

<div class="row px-8 pt-4 -mb-8">
  <div class="col-auto">
    <h1 class="text-2xl font-extrabold text-white md:text-4xl lg:text-5xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Blog Posts:</span></h1>
  </div>
</div>

<div class="flex pt-10">

{{!-- blog post --}}
        <div class="w-1/2  grid mx-8 mb-8 border rounded-xl shadow-sm border-gray-700 md:mb-12  bg-gray-800">
            <figure class="flex px-8 ml-8 flex-col items-center justify-center p-8 text-center  border-b rounded-xl md:rounded-xl md:rounded-ss-lg md:border-e bg-gray-800 border-gray-700">
                <blockquote class="max-w-2xl px-8  mx-auto mb-4  lg:mb-8 text-gray-400">
                    <h3 class="blogTitle items-center text-uppercase text-lg font-semibold  text-white">{{title}}</h3>
                    <p class="blogDescTwo my-4 text-left">{{description}}</p>
                </blockquote>
                <figcaption class="flex px-8 items-center justify-center ">
                    <div class="space-y-0.5 font-medium text-white text-left rtl:text-right ms-3">
                        <div class="blogCreate">{{user.username}}</div>
                        <div class="date text-sm  text-gray-400 ">{{format_date date_created}}</div>
                    </div>
                </figcaption>    
            </figure>
        </div>

<div class="w-1/2">
        {{#if logged_in}} 
{{!-- posting comment --}}
        <form class="new-comment-form px-8" data-blogid={{id}}>
        <div class=" mb-4 border rounded-lg bg-gray-700 border-gray-600">
            <div class="px-4 py-2 rounded-t-lg bg-gray-800">
                <label for="comment" class="sr-only">Your comment</label>
                <textarea id="comment" rows="4" class="textAreaCont w-full px-0 text-sm  border-0  focus:ring-0 text-white placeholder-gray-400 bg-gray-800" placeholder="Write a comment..." required></textarea>
            </div>
            <div class="flex items-center justify-between px-3 py-2 border-t border-gray-600">
                <button type="submit" class="inline-flex items-center py-2.5 px-4 text-xs font-medium text-center text-white bg-blue-700 rounded-lg focus:ring-4  focus:ring-blue-900 hover:bg-blue-800">
                    Post comment
                </button>
                <div class="flex ps-0 space-x-1 rtl:space-x-reverse sm:ps-2">
                    <button type="button" class="inline-flex justify-center items-center p-2  rounded cursor-pointer   text-gray-400 hover:text-white hover:bg-gray-600">
                    </button>
                    <button type="button" class="inline-flex justify-center items-center p-2  rounded cursor-pointer  text-gray-400 hover:text-white hover:bg-gray-600">
                        <span class="sr-only">Set location</span>
                    </button>
                    <button type="button" class="inline-flex justify-center items-center p-2  rounded cursor-pointer  text-gray-400 hover:text-white hover:bg-gray-600">
                    </button>
                </div>
            </div>
        </div>
        </form>

{{!-- rendering user comments to page --}}
        {{/if}}
        <div class="flex items-start px-8 gap-2.5">
        {{#each comments as |comment|}}
        <div class="flex flex-col gap-1 w-full max-w-[320px]">
            <div class="commentCont flex items-center space-x-2 rtl:space-x-reverse">
                <span class="commentOwner text-sm font-semibold text-white">{{comment.user.username}}</span>
                <span class="text-sm font-normal text-gray-400">{{format_date date_created}}</span>
            </div>
            <div class="flex flex-col leading-1.5 p-4 rounded-lg border-gray-200 bg-gray-700">
                <p class="commentText text-sm font-normal text-white">{{comment.comment_description}}</p>
            </div>
        </div>
        </div>
        {{/each}}

</div>

</div>
<script src="/js/comments.js"></script>
