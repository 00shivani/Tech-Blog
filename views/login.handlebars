<link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.css" rel="stylesheet" />

<section class="w-full h-full bg-gray-900 space-y-8">
  <div class="flex space-y-8  flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <a href="#" class="flex items-center mb-6 text-2xl font-semibold  text-white">
          {{!-- <img class="w-8 h-8 mr-2" src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/logo.svg" alt="logo">
          Tech Blog --}}
      </a>
      <div class="w-1/2 rounded-lg shadow border md:mt-0 sm:max-w-md xl:p-0 bg-gray-800 border-gray-700">
          <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
              <h1 class="text-2xl text-center leading-tight tracking-tight  md:text-2xl text-white">
                  Sign in to your account
              </h1>
              <form class="login-form space-y-4 md:space-y-6" action="#">
                  <div>
                      <label for="username" class="block mb-2 text-sm font-medium  text-white">Username</label>
                      <input type="text" name="username" id="username" class="border  sm:text-sm rounded-lg  focus:border-purple-600 block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-purple-500 " placeholder="techblogger42" required="">
                  </div>
                  <div>
                      <label for="password" class="block mb-2 text-sm font-medium text-white">Password</label>
                      <input type="password" name="password" id="password" placeholder="••••••••" class=" border   sm:text-sm rounded-lg focus:border-purple-600 block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-purple-500 " required="">
                  </div>
                  <div class="flex items-center justify-between">
                      <div class="flex items-start">
                          <div class="flex items-center h-5">
                            <input id="remember" aria-describedby="remember" type="checkbox" class="w-4 h-4 border  rounded  focus:ring-3  bg-gray-700 border-gray-600 focus:ring-purple-600 ring-offset-gray-800" required="false">
                          </div>
                          <div class="ml-3 text-sm">
                            <label for="remember" class=" text-gray-300">Remember me</label>
                          </div>
                      </div>
                      <a href="#" class="text-sm font-medium text-purple-600 hover:underline">Forgot password?</a>
                  </div>
                  <button type="submit" class="w-full text-white focus:ring-4 focus:outline-none  font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-purple-600 hover:bg-purple-700 focus:ring-purple-800">Sign in</button>
                  <p class="text-sm font-light  text-gray-400">
                      Don’t have an account yet? <a href="./signup" class="font-medium hover:underline  text-purple-600 hover:text-purple-400">Sign up</a>
                  </p>
              </form>
          </div>
      </div>
  </div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.0/flowbite.min.js"></script>
